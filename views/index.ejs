<!DOCTYPE html>
<html lang="en">

<head>
    <%- include ('./partials/head.ejs') %>
</head>

<body>
    <div class="headline">
        <h1>Pokemon Home Page</h1>
        <button><a href="/pokemon/new" class="btn btn-secondary">Add New Pokemon</a></button>
    </div>
    <section>
        <div class='container' id='one' style="display:grid grid-template-columns: 40px 50px auto 50px 40px">
            <table class="table" style="table-layout: fixed">
                <tbody>
                    <tr>
                        <% for(let i = 0; i < allPokemon.length; i++) { %>

                        <th id='element'>
                            <a href="/pokemon/<%= i %>">
                                <img src="<%= allPokemon[i].img%>" alt="pokemon image" width='100' height='100'>
                            </a>
                        </th>
                            <!-- DELETE ADD HERE -->
                            <td height='100'>
                            <form action="/pokemon/<%= i %>?_method=DELETE" method="POST" style="padding: 0">
                                <input type="submit" value="DELETE" />
                            </form>
                            <button><a href="/pokemon/<%= i %>/edit" style="padding: 0">EDIT</a></button>

                            <% } %>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </section>
    <% console.log(allPokemon[allPokemon.length - 1]) %>
</body>

</html>