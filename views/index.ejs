


<!DOCTYPE html>
<html lang="en">
<head>
    <%- include ('./partials/head.ejs') %>
</head>
<body>
    <div class="headline">
        <h1>Pokemon Home Page</h1>
        <button><a href="/pokemon/new" class="btn btn-secondary">Add New Scientist</a></button>
    </div>
    <div class='container'>
    <table class="table">
        <tbody>
            <tr>
        <% for(let i = 0; i < allPokemon.length; i++) { %>
                
            <td>
               <a href="/pokemon/<%= i %>"> 
                <img src="<%= allPokemon[i].img%>" alt="pokemon image" width='100' height='100'>
            </a>
            <!-- DELETE ADD HERE -->
            <form action="/pokemon/<%= i %>?_method=DELETE" method="POST">
                <input type="submit" value="DELETE"/>
            </form>
            <button><a href="/pokemon/<%= i %>/edit">EDIT</a></button>
          
            <% } %>
        </td>
        </tr>
</tbody>
</table>
</div>
<% console.log(allPokemon[allPokemon.length - 1]) %>
</body>
</html>